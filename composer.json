{
    "name": "devkussema/semantica-app",
    "description": "Semantica Framework - Modern PHP framework application skeleton",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Augusto Kussema",
            "email": "dev.kussema@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "devkussema/semantica-core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}